{
  "version": "2012-10-17",
  "policies": {
    "readonly": {
      "Version": "2012-10-17",
      "Statement": [
        {
          "Effect": "Allow",
          "Action": [
            "s3:GetObject",
            "s3:ListBucket"
          ],
          "Resource": [
            "arn:aws:s3:::*/*",
            "arn:aws:s3:::*"
          ]
        }
      ]
    },
    "readwrite": {
      "Version": "2012-10-17",
      "Statement": [
        {
          "Effect": "Allow",
          "Action": [
            "s3:*"
          ],
          "Resource": [
            "arn:aws:s3:::*/*",
            "arn:aws:s3:::*"
          ]
        }
      ]
    }
  }
}
